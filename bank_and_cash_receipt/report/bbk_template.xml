<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_bbk">
		<div class="page">
			<div class="oe_structure" />
			<div class="text-center">
				<h2 style="margin-top:3px;">
					PT Kasih Karunia Sejati
				</h2>
			</div>
			<br />
			<div class="text-center">
				<h4 style="margin-top:3px;">
					Bukti Bank Keluar
				</h4>
			</div>
			<div class="row mt20 mb20">
				<div class="col-xs-6">
					<strong>
						<h2>
							<span t-field="doc.name" />
						</h2>
					</strong>
					<h5 style="margin-top:3px;">
						Journal :
						<span t-field="doc.journal_id.name" />
					</h5>
				</div>
				<div class="col-xs-6">
					<br />
					<h5 style="margin-top:50px;">
						Created Date :
						<span t-field="doc.create_date" />
					</h5>
				</div>
			</div>
			<table class="table table-condensed" style="margin-top:30px;">
				<thead>
					<tr>
						<th>Account</th>
						<th>Date</th>
						<th>Partner</th>
						<th>Label</th>
						<th>Credit</th>
					</tr>
				</thead>
				<tbody>
					<tr t-foreach="doc.line_ids" t-as="line">
						<td>
							<span t-field="line.account_id.name" />
						</td>
						<td>
							<span t-field="doc.date" />
						</td>
						<td>
							<span t-field="line.partner_id.name" />
						</td>
						<td>
							<span t-field="line.name" />
						</td>
						<td>
							<span t-field="line.credit" />
						</td>
					</tr>
					<tr>
						<td colspan="4">
						</td>
						<td>
							<span t-esc="sum(l.credit for l in doc.line_ids)" />
						</td>
					</tr>
				</tbody>
			</table>
			<table border="1" width="100%">
				<tr>
					<td>
						<strong>
							<h4>
								Pembukuan : ________________
							</h4>
						</strong>
					</td>
					<td>
						<strong>
							<h4>
								Mengetahui : ________________
							</h4>
						</strong>
					</td>
					<td>
						<strong>
							<h4>
								Menyetujui : ________________
							</h4>
						</strong>
					</td>
				</tr>
				<tr>
					<td style="text-align:right">
						<strong>
							<h4>
								Kasir : ________________
							</h4>
						</strong>
					</td>
					<td style="text-align:center">
						<strong>
							<h4>
								Penyetor : ________________
							</h4>
						</strong>
					</td>
				</tr>
			</table>
		</div>
	</template>

	<template id="report_bukti_bank_keluar">
		<t t-call="report.html_container">
			<t t-foreach="docs" t-as="doc">
				<t t-call="bank_and_cash_receipt.report_bbk" />
			</t>
		</t>
	</template>

	<report id="report_of_bbk" string="BBK" model="bukti.bank.keluar"
		report_type="qweb-pdf"
		file="bank_and_cash_receipt.report_bukti_bank_keluar"
		name="bank_and_cash_receipt.report_bukti_bank_keluar" />

	<record id="bbk_paperformat" model="report.paperformat">
		<field name="name">BBK Report</field>
		<field name="default" eval="True" />
		<field name="format">A4</field>
		<field name="page_height">0</field>
		<field name="page_width">0</field>
		<field name="orientation">Portrait</field>
		<field name="margin_top">10</field>
		<field name="margin_bottom">20</field>
		<field name="margin_left">5</field>
		<field name="margin_right">5</field>
		<field name="header_line" eval="False" />
		<field name="header_spacing">25</field>
		<field name="dpi">90</field>
	</record>

	<record id="bank_and_cash_receipt.report_of_bbk"
		model="ir.actions.report.xml">
		<field name="paperformat_id" ref="bbk_paperformat" />
	</record>

</odoo>